<style>
  body {
   
    background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://www.teahub.io/photos/full/197-1977791_portland-wallpapers-hd-portland-oregon-city-view.jpg);
    background-repeat: no-repeat; 
    background-position: center;
    background-attachment: fixed; 
    webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    height:100%;
    width:100%; 
    
  }

  input, select, textarea{
    color: white;
  }
</style>

<body>
<div style="text-align: center">
<div>
<h2 style="color: white">Don't worry, it happens to all of us.</h2>

<br><br><br>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <br>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your email address", style: "background-color: transparent; border: 2px solid white; border-radius: 2px; padding: 5px;"%>
  </div>

  <br><br><br><br>

  <div class="actions">
    <%= f.submit("Send me password reset instructions", class:"btn btn-transparent btn-rounded", style:"border: 2px solid white; border-radius: 5px; color: white;") %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
</body>