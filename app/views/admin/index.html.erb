<div id='users' data-controller='index update destroy'
    data-index-url-value='/api/v1/users' data-destroy-url-value='/api/v1/users' data-update-url-value='/api/v1/users'
    data-index-offset-value=0 data-index-limit-value=10
    data-action='update:updated->index#query destroy:deleted->index#query'>
  <template data-index-target='template'>
    <tr data-update-target='update'>
      <td><input data-nxt-id type='checkbox' name='id' data-destroy-target='destroy'></td>
      <td class='name'><span data-nxt-first_name></span> <span data-nxt-last_name></span></td>
      <td><input class='decor' data-nxt-is_admin type='checkbox' disabled>
      <td data-nxt-email></td>
      <td data-nxt-created_at></td>
    </tr>
  </template>
  <div class='d-flex justify-content-end'>
    <label class='me-2' for='size'>Number of results:</label>
    <select id='size' data-index-target='limit' data-action="index#updateLimit">
      <option value="10">10</option>
      <option value="25">25</option>
      <option value="50">50</option>
      <option value="100">100</option>
    </select>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col"></th>
        <th scope="col">Email</th>
        <th scope="col">Created</th>
      </tr>
    </thead>
    <tbody data-index-target='dom'>
    </tbody>
  </table>
  <div class='d-flex justify-content-between'>
    <div>
      <button class='btn-sm btn-primary' data-action='update#updateBatchFromCheckbox' data-update-payload-param='{"is_admin": true}'>Elevate</button>
      <button class='btn-sm btn-primary' data-action='update#updateBatchFromCheckbox' data-update-payload-param='{"is_admin": false}'>Demote</button>
      <button class='btn-sm btn-primary' data-action='click->destroy#destroy'>Deactivate</button>
    </div>
    <div>
      <button class='btn-sm btn-primary'><i class='bi bi-chevron-double-left'></i></button>
      <button class='btn-sm btn-primary' data-action='index#decrementOffset'><i class='bi bi-chevron-left'></i></button>
      <button class='btn-sm btn-primary' data-action='index#incrementOffset'><i class='bi bi-chevron-right'></i></button>
      <button class='btn-sm btn-primary'><i class='bi bi-chevron-double-right'></i></button>
    </div>
  </div>
</div>
